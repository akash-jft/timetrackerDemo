<div class="header">
    <h2>Demo</h2>
</div>
<div class="row">
    <div class="card" style="margin-right: 5px;">
        <div class="card-body row borderBottom">
            <h3 style="margin-right: 10%;">Authors</h3>
        </div>
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="table-headings">
                    <h4>Authors</h4>
                    <button class="btn-primary btn-radius" id="myBtn">add</button>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <table id="tablek" class="table table-hover table-bordered dt-scrollable">
                    <thead>
                        <tr>
                            <th width="35%">Name</th>
                            <th width="35%">Email</th>
                            <th width="30%">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% author.forEach(task=> {%> 
                            <tr>
                                <td><%=task.name%></td>
                                <td><%=task.email%></td>
                                <td>
                                    <a class="" href="author/editbyid?id=<%=task.id%>" role="button">Edit</a>  / 
                                    <a class="" href="author/delete?id=<%=task.id%>" role="button">Delete</a>
                                </td>
                            </tr>
                        <%})%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>


    <div class="card" style="margin-left: 5px;">
        <div class="card-body row borderBottom">
            <h3 style="margin-right: 10%;">Tasks</h3>
        </div>
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="table-headings">
                    <h4>Tasks</h4>
                    <button class="btn-primary btn-radius" id="taskBtn">add</button>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <table class="table table-hover table-bordered dt-scrollable">
                    <thead>
                    <tr>
                        <th width="35%">Name</th>
                        <th width="35%">Description</th>
                        <th width="30%">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                        <% task.forEach(task=> {%> 
                            <tr>
                                <td><%=task.name%></td>
                                <td><%=task.description%></td>
                                <td>
                                    <a class="" href="task/editbyid?id=<%=task.id%>" role="button">Edit</a>  / 
                                    <a class="" href="task/delete?id=<%=task.id%>" role="button">Delete</a>
                                </td>
                            </tr>
                        <%})%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div>
        <a href="/timer" style="text-decoration: none;"> <button class="btn-primary btn-radius">Timer</button></a>
    </div>

    <%-partial("./partial/authormodel",{authorfetch})%>
    <%-partial("./partial/taskmodel",{taskfetch})%>


</div>


